<div class="container-fluid h-100 body">
  <div class="row h-100">
    <%= form_for(@event, :html => {:class => 'col-12 col-md-4 m-md-auto p-0 bg-white text-dark rounded'}) do |f| %>
        <% @event.errors.full_messages.each do |error| %>
        <div class="alert alert-danger">
          <%= error %>
        </div>
        <% end %>
        <div class="p-3">
          <strong><%= f.label :title, "Title" %></strong><br />
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <div class="input-group-text">
                @
              </div>
            </div>
            <%= f.text_field :title, placeholder: "eg. Microverse meetup", class: 'form-control' %><br>
          </div>
          <strong><%= f.label :location, "Location" %></strong><br />
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <div class="input-group-text">
                @
              </div>
            </div>
            <%= f.text_field :location, placeholder: "eg. Abidjan", class: 'form-control' %><br>
          </div>
        </div>
        <%= f.submit 'Create', {:class => 'w-100 text-center text-uppercase bg-oschool p-3 text-white'} %>
    <% end %>

  </div>
</div>
